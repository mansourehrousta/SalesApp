<Window x:Class="SalesApp.Quote"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quote" Height="300" Width="300">
    <Grid>
        <DockPanel Margin="10" LastChildFill="True">
            <TextBlock Margin="10" FontSize="20" DockPanel.Dock="Top">Insurance Calculator</TextBlock>
            
            <TextBox  Text="Postal Code" Width="100" Margin="5,5,5,180" DockPanel.Dock="Left"/>
            <TextBox  Text="Area in m2" Width="100" Margin="5,5,5,180" DockPanel.Dock="Right"/>


            <TextBox  Text="Build Year" Width="115" Margin="0,45,5,140" />
        </DockPanel>


    </Grid>
</Window>
